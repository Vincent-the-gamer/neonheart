{
    "name": "neonheart",
    "displayName": "NeonHeart",
    "description": "An opinionated VS Code theme.",
    "version": "0.1.2",
    "author": "Vincent-the-gamer",
    "publisher": "Vincent-the-gamer",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/Vincent-the-gamer/neonheart"
    },
    "engines": {
        "vscode": "^1.33.0"
    },
    "keywords": [
        "retro",
        "80s"
    ],
    "categories": [
        "Themes"
    ],
    "activationEvents": [
        "onCommand:neonheart.enableNeon",
        "onCommand:neonheart.disableNeon"
    ],
    "main": "./src/extension.js",
    "contributes": {
        "themes": [
            {
                "label": "NeonHeart",
                "uiTheme": "vs-dark",
                "path": "./themes/neonheart-color-theme.json"
            }
        ]
    },
    "scripts": {
        "login": "vsce login",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@vscode/vsce": "^2.22.0"
    }
}
